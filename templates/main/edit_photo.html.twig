{#utilisation squelette#}
{% extends "base.html.twig" %}

{#Définition titre#}
{% block title %}Modification de la photo de profil{% endblock %}

{#Remplissage du body#}
{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <h1 class="text-center my-5 text-warning">Modification de la photo de profil</h1>

            </div>
        </div>

        <div class="row">
            <div class="col-12 text-center mb-4">
                <a href="{{ path('main_profil') }}" class="text-decoration-none text-warning">Revenir à mon profil</a>
            </div>
        </div>

        {#    Lien retour    #}

        <div class="row">
            <div class="col-12 col-md-8 mx-auto bg-black p-3">
                <div class="row">
                    <div class="col-12 col-md-6 mx-auto">
                        {{ form( edit_photo_form) }}
                    </div>
                </div>
            </div>
        </div>

        {#    Affichage de l'image fixe en bandeau    #}

        <div class="row my-5 wolverine-cover"></div>

    </div>

{% endblock %}
