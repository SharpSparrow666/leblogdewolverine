{#utilisation squelette#}
{% extends "base.html.twig" %}

{#Définition titre#}
{% block title %}Accueil{% endblock %}

{#Remplissage du body#}
{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <h1 class="text-center my-5 text-warning text-uppercase fw-bold">{{ site_name }}</h1>

            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-10 mx-auto">

                <h2 class="text-center my-4 text-warning">Lorem ipsum dolor sit amet, consectetur adipisicing.</h2>

                <p class="text-center text-warning">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet aspernatur delectus distinctio earum, eum illo, in ipsam iste mollitia optio quasi quidem, recusandae repellat repudiandae tempora tempore ut voluptates voluptatibus!</p>

            </div>
        </div>

{#    Affichage de l'image fixe en bandeau    #}

        <div class="row my-5 wolverine-cover"></div>

{#    Affichage des derniers articles publiés    #}

        <div class="row">
            <div class="col-12 col-md-8 mx-auto">
                <div class="row">

                    <h2 class="col-12 text-center text-warning">Dernières publications</h2>

                </div>

{#       Boucle pour parcourir tous les articles à afficher         #}

                {% for article in articles %}

                    <div class="row">

                        <div class="col-12">

                            <div class="card my-3 bg-warning">

                                <div class="card-header">

                                    {# Titre de l'article, cliquable vers la page détaillée de l'article #}
                                    <a class="text-decoration-none text-dark fw-bold text-uppercase" href="{{ path('blog_publication_view', {slug: article.slug}) }}"><i class="far fa-newspaper me-2"></i>{{ article.title }}</a>
                                </div>

                                <div class="card-body text-dark">

                                    <div class="mb-2">

                                        {# Affichage du contenu de l'article, tronqué à 100 mots, sans balises html, suivi de "..." et d'un lien "lire la suite" #}
                                        {{ article.content|striptags|excerpt(100) }}
                                        <a class="text-dark" href="{{ path('blog_publication_view', {slug: article.slug}) }}">Lire la suite</a>
                                    </div>

                                    {# Date et auteur de l'article #}
                                    <footer class="blockquote-footer my-2 text-dark">Publié le <strong>{{ article.publicationDate|date('d/m/Y à H\\hi') }}</strong> par <strong>{{ article.author.pseudonym }}</strong></footer>

                                </div>

                            </div>

                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>

        <div class="row mb-5">
            <div class="col-12 col-md-10 mx-auto">

                <h2 class="text-center my-4 text-warning">Lorem ipsum dolor sit amet, consectetur adipisicing.</h2>

                <p class="text-center text-warning">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet aspernatur delectus distinctio earum, eum illo, in ipsam iste mollitia optio quasi quidem, recusandae repellat repudiandae tempora tempore ut voluptates voluptatibus!</p>

            </div>
        </div>

    </div>

{% endblock %}
