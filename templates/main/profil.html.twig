{#utilisation squelette#}
{% extends "base.html.twig" %}

{#Définition titre#}
{% block title %}Profil{% endblock %}

{#Remplissage du body#}
{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <h1 class="text-center my-5 text-warning">Gestion du profil</h1>

            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-10 mx-auto">
                <div class="row">

                    {# Bloc de gauche #}
                    <div class="col-12 col-md-3 bg-black px-2 py-3 text-center">

                        {# Image de profil #}
                        <div class="row">
                            <div class="col-10 mx-auto d-flex justify-content-center align-items-center">

                                {% if app.user.photo is null %}

                                    <img class="img-thumbnail" src="{{ asset('images/profil_default.jpg')}}" alt="">

                                {% else %}

                                    <img class="img-thumbnail" src="{{ asset('images/profils/' ~ app.user.photo )|imagine_filter('profil')}}" alt="">

                                {% endif %}

                            </div>
                        </div>

                        {# Lien vers la page permettant de changer de photo de profil #}
                        <div class="row">
                            <div class="col-12 pt-3">
                                <a href="{{ path('main_edit_photo') }}" class="text-warning text-decoration-none">Modifier la photo de profil</a>
                            </div>
                        </div>

                    </div>

                    {# Bloc de droite #}
                    <div class="col-12 col-md-9 px-2 py-3 bg-dark d-flex justify-content-center align-items-center">

                        {# Infos du compte #}
                        <ul class="list-group col-12 col-md-8 p-0">
                            <li class="list-group-item bg-black text-warning">Adresse Email : <span class="text-info text-light">{{ app.user.email }}</span></li>
                            <li class="list-group-item bg-black text-warning">Pseudonyme : <span class="text-info text-light">{{ app.user.pseudonym }}</span></li>
                            <li class="list-group-item bg-black text-warning">Date d'inscription : <span class="text-info text-light">{{ app.user.registrationDate|date('d/m/Y à H\\hi') }}</span></li>
                            <li class="list-group-item bg-black text-warning">
                                Compte :
                                <span class="text-info text-light">{{  is_granted('ROLE_ADMIN') ? 'Administrateur' : 'Utilisateur' }}</span>
                            </li>
                        </ul>

                    </div>

                </div>
            </div>
        </div>

    </div>

{% endblock %}
